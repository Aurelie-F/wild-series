{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Season{% endblock %}

{% block body %}
    <div class="container-fluid ml-4">
        <h1 class="text-center my-4">{{ 'seasons'|trans }}</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ season.id }}</td>
            </tr>
            <tr>
                <th>{{ 'season.number'|trans }}</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>{{ 'season.year'|trans }}</th>
                <td>{{ season.year }}</td>
            </tr>
            <tr>
                <th>{{ 'season.description'|trans }}</th>
                <td>{{ season.description }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('season_index') }}">{{ 'back_list'|trans }}</a>

        <a href="{{ path('season_edit', {'id': season.id}) }}">{{ 'update'|trans }}</a>

        {{ include('season/_delete_form.html.twig') }}
    </div>
{% endblock %}
