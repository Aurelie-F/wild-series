{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Seasons{% endblock %}

{% block body %}
    <div class="container-fluid ml-4">
        <h1 class="text-center my-4">{{ 'seasons'|trans }}</h1>

        <table class="table">
            <thead>
            <tr>
                <th>{{ 'season.number'|trans }}</th>
                <th>{{ 'season.year'|trans }}</th>
                <th>{{ 'season.description'|trans }}</th>
                <th>{{ 'actions'|trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for season in seasons %}
                <tr>
                    <td>{{ season.number }}</td>
                    <td>{{ season.year }}</td>
                    <td>{{ season.description }}</td>
                    <td>
                        <a href="{{ path('season_show', {'id': season.id}) }}">{{ 'show'|trans }}</a>
                        <a href="{{ path('season_edit', {'id': season.id}) }}">{{ 'update'|trans }}</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">{{ 'no_season'|trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('season_new') }}">{{ 'season.new'|trans }}</a>
    </div>
{% endblock %}
