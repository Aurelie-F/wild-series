{% extends 'base.html.twig' %}

{% block title %}Program #{{ program.id }}{% endblock %}

{% block body %}
    <div class="container-fluid ml-2">
        <div class="media">
            <img class="align-self-start mr-3 poster" src="{{program.poster}}" alt="{{ program.title }} poster">
            <div class="media-body">
                <h1 class="mt-0">{{ program.title }}</h1>
                <p class="w-75">{{ program.synopsis }}</p>
                <p>Category : {{ program.category.name }}</p>
                <p>Seasons available :
                    {% for season in seasons %}
                        <a href="{{ path("program_season_show", { program: program.id , season: season.id }) }}">
                            {{ season.number }}
                        </a>
                    {% else %}
                        No season found
                    {% endfor %}
                </p>
                <strong>Acteurs :</strong>
                <ul>
                    {% for actor in program.actors %}
                        <li>
                            <a href="{{ path("actor_show", { id: actor.id }) }}">
                                {{ actor.name }}
                            </a>
                        </li>
                    {% else %}
                        <li>Aucun acteur pour cette s√©rie</li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        <a href="{{ path('program_index') }}">
            Back to the program list
        </a>
    </div>
{% endblock %}