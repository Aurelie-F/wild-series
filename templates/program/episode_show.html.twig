{% extends 'base.html.twig' %}

{% block title %}Season {{ season.number }} of {{ program.title }}{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center my-4">Season {{ season.number }} Episode {{ episode.number }} of {{ program.title }}</h1>
        <h2 class="mb-4">{{ episode.title }}</h2>
        <div class="mb-4 mr-5">
            {{ episode.synopsis }}
        </div>
        <div class="row text-center mb-4">
            {% for comment in episode.comments %}
                <div class="col-4 mb-2">
                    <div class="card">
                        <div class="card-header">
                            <span class="badge badge-success">Note : {{ comment.rate }} / 5 </span>
                        </div>
                        <div class="card-body">
                            <p class="card-text">{{ comment.comment }}</p>
                            {% if is_granted("ROLE_ADMIN") or app.user == comment.author %}
                                {{ include ('comment/_delete_form.html.twig') }}
                            {% endif %}
                        </div>
                        <div class="card-footer text-muted">
                            Posted by {{ comment.author.email}}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        {% if app.user %}
            {{ form_start(form) }}
            <h3 class="mt-4">Leave a comment</h3>
            {{ form_widget(form) }}
            <button class="btn btn-primary">Post</button>
            {{ form_end(form) }}
        {% endif %}
    </div>
{% endblock %}