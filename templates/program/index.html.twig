{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - All programs{% endblock %}

{% block body %}
    <div class="container-fluid ml-4">
        <h1 class="text-center my-4">Programs</h1>
        {{ form_start(form, {'attr': {'class': 'search'}}) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary ml-4">Search</button>
        {{ form_end(form) }}
        <div class="row mt-4">
            {% for program in programs %}
                <div class="col-3">
                    <div class="card mb-3" style="width: 28rem; height: 22rem">
                        <div class="card-body">
                            <h2 class="card-title text-center">{{ loop.index }} - {{ program.title }}</h2>
                            <h3 class="card-subtitle my-2 text-muted text-center">Category : {{ program.category.name }}</h3>
                            <p class="card-text my-4">{{ program.synopsis }}</p>
                            <a href="{{ path("program_show", { slug: program.slug }) }}" class="card-link">See</a>
                        </div>
                    </div>
                </div>
            {% else %}
                No program found
            {% endfor %}
        </div>

        <div><a href="{{ path('program_new') }}">
                Add a program
            </a></div>
        <a href="{{ path('app_index') }}">
            Back to the home
        </a>
    </div>
{% endblock %}