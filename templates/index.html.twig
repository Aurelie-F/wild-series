{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <h1 class="text-center my-4">{{'welcome'|trans}}</h1>
        {% if app.user %}
            <h2 class="text-center my-4">{{ 'last_program'|trans }}</h2>
            <div class="row ml-4">
                {% for program in programs %}
                    <div class="col-4">
                        <div class="card" style="width: 30rem; height: 22rem;">
                            <div class="card-body">
                                <h2 class="card-title text-center">{{ program.title }}</h2>
                                <h3 class="card-subtitle my-2 text-muted text-center">{{ 'category'|trans }} : {{ program.category.name }}</h3>
                                <p class="card-text my-4">{{ program.synopsis }}</p>
                                <a href="{{ path("program_show", { slug: program.slug }) }}" class="card-link">{{ 'see'|trans }}</a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    {{ 'no_program'|trans }}
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}