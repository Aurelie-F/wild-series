{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Programs{% endblock %}

{% block body %}
    <h1>{{ category }}</h1>
    {% for program in programs %}
        <div>
            <h2>{{ loop.index }} / {{ program.title }}</h2>
            <p>{{ program.synopsis }}</p>
            <a href="{{ path("program_show", { slug: program.slug }) }}">{{ 'see'|trans }}</a>
        </div>
    {% else %}
        {{ 'no_program'|trans }}
    {% endfor %}
    <div>
        <a href="{{ path('category_index') }}">
            {{ 'back_list'|trans }}
        </a>
    </div>
{% endblock %}