{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - All categories{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="text-center my-4">{{ 'categories'|trans }}</h1>
        <div class="row justify-content-center">
            {% for category in categories %}
                <div class="card mb-3 ml-2" style="width: 15rem;">
                    <div class="card-body">
                        <h2 class="card-title">{{ loop.index }} - {{ category.name }}</h2>
                        <a href="{{ path("category_show", { categoryName: category.name }) }}" class="card-link">
                            {{ 'see'|trans }}
                        </a>
                    </div>
                </div>
            {% else %}
                {{ 'no_category'|trans }}
            {% endfor %}
        </div>

        <div><a href="{{ path('category_new') }}">
                {{ 'category.add'|trans }}
            </a></div>
        <a href="{{ path('app_index') }}">
            {{ 'back_home'|trans }}
        </a>
    </div>
{% endblock %}