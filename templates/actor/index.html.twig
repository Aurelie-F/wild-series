{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - All actors{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="text-center my-4">{{ 'actors'|trans }}</h1>
        <div class="row justify-content-center">
            {% for actor in actors %}
                <div class="card mb-3 ml-2 align-items-center" style="width: 15rem;">
                    <img src="/uploads/{{actor.photo}}"
                         class="card-img-top"
                         alt="{{ actor.name }}"
                         style="width: 14rem;">
                    <div class="card-body">
                        <h2 class="card-title">{{ actor.name }}</h2>
                        <a href="{{ path("actor_show", { id: actor.id }) }}" class="card-link">{{ 'see'|trans }}</a>
                    </div>
                </div>
            {% else %}
                {{ 'no_actor'|trans }}
            {% endfor %}
        </div>

        <a href="{{ path('app_index') }}">
            {{ 'back_home'|trans }}
        </a>
    </div>
{% endblock %}