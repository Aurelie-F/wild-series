{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Episode{% endblock %}

{% block body %}
    <div class="container-fluid ml-4">
        <h1 class="text-center my-4">Episode</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>{{ 'episode.title'|trans }}</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>{{ 'episode.number'|trans }}</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>{{ 'episode.synopsis'|trans }}</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('episode_index') }}">{{ 'back_list'|trans }}</a>

        <a href="{{ path('episode_edit', {'slug': episode.slug}) }}">{{ 'update'|trans }}</a>

        {{ include('episode/_delete_form.html.twig') }}
    </div>
{% endblock %}
