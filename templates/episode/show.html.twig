{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Episode{% endblock %}

{% block body %}
    <div class="container-fluid ml-4">
        <h1 class="text-center my-4">Episode</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ episode.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ episode.title }}</td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ episode.number }}</td>
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ episode.synopsis }}</td>
            </tr>
            </tbody>
        </table>

        <a href="{{ path('episode_index') }}">Back to list</a>

        <a href="{{ path('episode_edit', {'id': episode.id}) }}">Edit</a>

        {{ include('episode/_delete_form.html.twig') }}
    </div>
{% endblock %}
