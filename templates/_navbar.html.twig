        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
            <li class="nav-item ml-2">
                <a class="nav-link" href="{{ path('program_index') }}">{{ 'program'|trans }}</a>
